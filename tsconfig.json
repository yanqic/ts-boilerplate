{
    "compilerOptions": {
        "strict": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "baseUrl": "src",
        "sourceMap": true,
        "target": "ES2020",
        "lib": ["esnext"],
        "outDir": "dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules"]
}
